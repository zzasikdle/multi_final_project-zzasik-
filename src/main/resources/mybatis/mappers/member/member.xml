<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
					
<mapper namespace="com.zzasik.member.dao.MemberDAO">

	
	
	<select id="login" resultType="MemberVO">
		SELECT * FROM usertbl WHERE user_id=#{user_id} AND user_pwd=#{user_pwd} 
		
	</select>
	
	<!-- 회원 가입 -->
	<insert id="insertMember" parameterType="memberVO">
		<![CDATA[
			INSERT INTO usertbl
			VALUES ( #{user_id},#{user_name},#{user_pwd},#{birth}
			,#{addr_1},#{addr_2},#{addr_3},#{phone},#{email},#{classification},#{survey_code} )
			
		]]>
	</insert>
	
	<!--  아이디 중복 체크 -->
	<select id="findMemberById" resultType="MemberVO">
		SELECT user_name FROM usertbl WHERE user_id=#{user_id}
		
	</select>
	
	
</mapper>